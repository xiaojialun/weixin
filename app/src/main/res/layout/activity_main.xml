<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.xjl.weixin.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="-2dp"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"
        android:background="@color/colorPrimary"
        app:title="@string/app_name"
        app:titleTextColor="@color/colorText"
        >
    </android.support.v7.widget.Toolbar>


    <android.support.v4.view.ViewPager
            android:id="@+id/viewpage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
        android:layout_gravity="center">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/tabview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        >
        <com.example.xjl.weixin.ChangeColorIconWithText
            android:id="@+id/iconWithTextOne"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            app:icon="@mipmap/ic_menu_start_conversation"
            app:color="#ff45c01a"
            app:text="@string/app_name"
            app:text_size="12sp"
            android:padding="5dp"/>
        <com.example.xjl.weixin.ChangeColorIconWithText
            android:id="@+id/iconWithTextTwo"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            app:icon="@mipmap/ic_menu_friendslist"
            app:color="#ff45c01a"
            app:text="@string/tab_call"
            app:text_size="12sp"
            android:padding="5dp"/>
        <com.example.xjl.weixin.ChangeColorIconWithText
            android:id="@+id/iconWithTextThree"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            app:icon="@mipmap/ic_menu_emoticons"
            app:color="#ff45c01a"
            app:text="@string/tab_find"
            app:text_size="12sp"
            android:padding="5dp"/>
        <com.example.xjl.weixin.ChangeColorIconWithText
            android:id="@+id/iconWithTextFour"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            app:icon="@mipmap/ic_menu_allfriends"
            app:color="#ff45c01a"
            app:text="@string/tab_me"
            app:text_size="12sp"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>
